#Estudando listas
from itertools import count


listaCompr = ['ovo', 'banana', 'leite']
print(listaCompr)
print(listaCompr[0])

#Atualizando lista
listaCompr[0] = 'frango'
print(listaCompr)

#Deletando item
del listaCompr[0]
print(listaCompr)

#Listas dentro de listas
lista = [[1,2,3], ['a','b','c'], [4,5,6]]
print(lista)
lista1 = lista[0]
lista2 = lista[1]
lista3 = lista[2]
print(lista1, lista2, lista3)

#Concatenando listas
listatot = lista1 + lista2
print(listatot)

#Pesquisando algo na lista
print(3 in listatot)

#Outras funÃ§Ãµes
print(len(lista1))
print(max(lista1))
print(min(lista1))
print(lista1.count(1))
print(lista1.index(3))

#Lista vazia
ltvazia = []
print(ltvazia)

#Adicionando item
ltvazia.append(1)
print(ltvazia)
ltvazia.insert(0, 2)
print(ltvazia)
ltvazia.reverse()
print(ltvazia)

#Para ordenar
ltdes = [5,10,45,1,9]
ltdes.sort()
print(ltdes)

